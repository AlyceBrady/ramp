<?php

/* This helper script expects an external table name, an external table 
 * reference object, and a Zend_Form object containing field elements.
 *
 */

// Establish status codes.
$statusCodes = array(
        // Application_Model_SetTable::UNKNOWN => 'icon-question-sign',
        Application_Model_SetTable::BLANK => 'icon-remove-sign',
        Application_Model_SetTable::PARTIAL => 'icon-plus-sign',
        Application_Model_SetTable::GOOD => 'icon-ok-sign',
    );

// Get the objects passed to this partial helper.
$table = $this->table;
$status = $this->status;

// Create a status indicator for whether all recommended fields have 
// been set for this record in the external table.
$statusCode = $statusCodes[$status];
echo "<i id='$table' class='$statusCode statusCode'> </i>\n";

?>
