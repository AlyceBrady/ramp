foreach ( $fields as $field )
{
    if ( $field->valueNecessaryForAdd() && ! $field->isVisible() )
    {
        $errormsgs[] .=
                    "Error: Cannot add entries to this table without values " .
                    "for " . $this->escape($field->getLabel()) .
                    ", which is a hidden field.";
        $canAddEntries = false;
    }
}

